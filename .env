# VisionHub Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-this-in-production

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyDAw9EVTk9zJ0w4Rzywurh7tAwM6zFfvMA

# Database Configuration
DB_PATH=./visionhub.db

# File Upload Configuration
UPLOAD_MAX_SIZE=104857600
UPLOAD_PATH=./public/uploads

# System Health Monitoring
HEALTH_CHECK_INTERVAL=30000
HEALTH_ALERTS_ENABLED=true

# Audit Trail Settings
AUDIT_RETENTION_DAYS=90

# Video Processing Settings
VIDEO_COMPRESSION_ENABLED=false
THUMBNAIL_AUTO_GENERATE=false

# External Services (Optional)
# CLOUD_STORAGE_BUCKET=your-bucket-name
# CDN_BASE_URL=https://your-cdn.com
# BACKUP_SCHEDULE=0 2 * * *

# Security Settings
PASSWORD_POLICY_ENFORCEMENT=true
SESSION_TIMEOUT=3600000

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Notification Settings
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Moderation
AUTO_MODERATION_ENABLED=true
CONTENT_ANALYSIS_THRESHOLD=0.8

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/visionhub.log